<!-- Title -->
<title> Modern Tech blog</title>
</head>
<!-- Body -->
<body>
<!-- Header Section -->
<header>
        <a href="/" id="title">Tech blog</a>">
    <!-- User Profile displays when a session is active -->
    {{#if logged_in}}
    <div class="navigation-bar">
        <button id="logout" class="btn nav btn-light">logout</button>
        <a href ="/views/post.handlebars" class="btn nav btn-success">Post</a>
        <a href = "/views/profile.handlebars" class="btn nav btn-warning">access your Post</a>
    </div>
     {{else}}
         <!-- Sign In / Register displays when a session is not active -->
      <div class="nav-bar">
          <a href="/views/login.handlebars" class="btn nav btn-light">login</a>
          <a href="/views/registration.handlebars" class="btn nav btn-info">Register New Account</a>
          </div>
          {{/if}}
          </header>
        <main> 
            {{{ body }}}
        </main>

        {{# if logged_in}}

        <script src="/public/js/logout.js"></script>

        {{/if}}
<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>
