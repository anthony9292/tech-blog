<!-- Body -->
<body>
<!-- Header Section -->
<header>       
     <a href="/" id="title"><h1>Tech blog </h1></a>
 <!-- User Profile displays when a session is active -->
    {{#if logged_in}}
        <!-- Profile / Sign Out displays when a session is active -->
        <div class="pilot"> 
             <button id="sign-out" class="btn nav btn-primary btn-lg">Sign-out</button>
             <a href="../post.handlebars" class="btn btn-secondary nav btn-lg">Post</a>
             <a href="../pro"
            </div>
        </div>
    <!-- Sign In / Register displays when a session is not active -->
    {{else}}  
        <div class="flex-item">
            <button class="btn btn-primary btn-lg" id="login-start">Log In</button>
        </div>
        <div class="flex-item">
            <button class="btn btn-primary btn-lg" id="register-start">Register</button>
        </div>
    {{/if}}
    </div>
</header>
<!-- Main -->
<main>
    <!-- Handlebars is rendered here -->    
    {{{body}}}
</main>
<!-- Footer -->
<footer>
    <!-- Copyright Info -->
    <p>Copyright &copy; tech blog.</p>
</footer>
<!-- Start Scripts-->
{{#if logged_in}}
<script src="./js/product.js"></script>
<script src="./js/logout.js"></script>
