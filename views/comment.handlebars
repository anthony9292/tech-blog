<div class="card">
    <div class="header-card"> 
        <h2>{{posts.title}}</h2>
        <h5 class="date">Date: {{format_date posts.updatedAt}}</h5>
</div>
<div class="card-body">
    <p>{{posts.text}}</p> 
    <textarea id="comment" rows="5" cols="50"></textarea>
    <button value={{posts.id}} class="btn btn-primary btn-lg" id="submit">comment</button> 
</div>
</div> 


<div class="card"> 
    {{#each posts.comments as |comment|}}
      <div class="header-card"> 
          <h5>{{comment.user.name}}</h5>
          <h5 class="date">Date: {{format_date  comment.updatedAt}}</h5>
      </div>
           <div class="card-body">
               <p>{{comment.comment_text}}</p>
           </div>
           {{/each}}
</div>

<script src="/js/subcomment.js"></script>