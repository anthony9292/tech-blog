{{#each posts as |post|}}

<div class="card">
    <div class="header-card">
        <h2>{{post.title}}</h2>
        <h5 class="date">Date: {{format_date post.updatedAt}}</h5>
    </div>
    <div class="card-body">
        <p>{{post.text}}</p>
        <button value="{{post.id}}" class="btn btn-primary comment button">Comment</button>
    </div>
</div>
{{/each}}

<script src="/js/comment.js"></script>