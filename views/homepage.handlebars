{{#each post as |post| }}
<div class=" card d-flex justify content-center">
         <h4 class="card-header">
              <h3>{{post.title}} 
              </h3>
              </h4> Date of post {{format_date Post.updateAt}}
         </div>
         <div class="body-card">
             <p>{{post.text}}</p>
             <button value="{{post.id}}" class="btn btn-dark">Comment</button>
         </div>
</div>
{{/each}}

<script src="/public/js/comment.js"></script>