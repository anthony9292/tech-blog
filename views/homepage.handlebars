{{#each post as |post| }}
<div class="card"> 
    <div class="header-card">
        <h2>{{post.title}}</h2>
        <h5>name:{{post.user.name}}</h5>
        <h5>Date: {{format_date post.updateAt}}</h5>
    </div>
    <div class="card-body">
        <p>{{post.text}}</p>
        <button value="{{post.id}}" class="btn btn-light comment button">comment</button>
    </div>
</div>
{{/each}}


<script src="/public/js/comment.js"></script>